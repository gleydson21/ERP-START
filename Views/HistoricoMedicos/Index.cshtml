@model IEnumerable<FisioCard.Models.HistoricoMedico>

@{
    ViewData["Title"] = "Index";
}

<!-- Título da Página -->
<h1 class="my-4">Histórico Médico</h1>

<!-- Botão para Criar Novo Registro -->
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<!-- Tabela com Estilos Modernos -->
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstOrDefault().Data)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstOrDefault().Descricao)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstOrDefault().Cliente)
            </th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome) <!-- Supondo que Cliente tem uma propriedade Nome -->
                </td>
                <td class="text-center">
                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.HistoricoMedicoId">Edit</a>
                    <a class="btn btn-secondary btn-sm ms-2" asp-action="Details" asp-route-id="@item.HistoricoMedicoId">Details</a>
                    <a class="btn btn-danger btn-sm ms-2" asp-action="Delete" asp-route-id="@item.HistoricoMedicoId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- CDN do Bootstrap para estilização -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
